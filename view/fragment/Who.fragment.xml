<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
  <Panel class="p0">
    <headerToolbar>
      <Toolbar
          width="100%"
          design="Solid"
          class="toolbarSection">
        <content>
          <Title
              level="H2"
              text="{i18n>who.title}"
              titleStyle="H3" />
        </content>
      </Toolbar>
    </headerToolbar>
    <content>
      <layout:BlockLayout background="Accent">
        <layout:BlockLayoutRow rowColorSet="ColorSet2">
          <layout:BlockLayoutCell>
            <core:HTML
                content="&lt;p class=&quot;who-text&quot;&gt;&lt;span class=&quot;who-title&quot;&gt;Cube Consultants&lt;/span&gt; {i18n>who.overview}&lt;/p&gt;"
                preferDOM="true"
                sanitizeContent="false"
                visible="true" />
            <core:HTML
                content="&lt;p class=&quot;who-text&quot;&gt;&lt;span class=&quot;who-title&quot;&gt;Mission&lt;/span&gt; {i18n>who.mission} &lt;/p&gt;"
                preferDOM="true"
                sanitizeContent="false"
                visible="true" />
            <core:HTML
                content="&lt;p class=&quot;who-text&quot;&gt;&lt;span class=&quot;who-title&quot;&gt;Vision&lt;/span&gt; {i18n>who.vision} &lt;/p&gt;"
                preferDOM="true"
                sanitizeContent="false"
                visible="true" />

          </layout:BlockLayoutCell>
          <layout:BlockLayoutCell>
            <Image
                src="./resources/img/who-section-image.png"
                width="100%"
                height="auto" />
          </layout:BlockLayoutCell>
        </layout:BlockLayoutRow>
      </layout:BlockLayout>
    </content>
  </Panel>
</core:FragmentDefinition>