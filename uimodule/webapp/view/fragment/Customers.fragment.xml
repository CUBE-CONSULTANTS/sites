<c:FragmentDefinition xmlns:c="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f" xmlns:cards="sap.f.cards" xmlns:l="sap.ui.layout">
  <Panel>
    <headerToolbar>
      <Toolbar width="100%" design="Solid" class="toolbarSection">
        <content>
          <Title level="H2" text="{i18n>customers.title}" titleStyle="H3" />
        </content>
      </Toolbar>
    </headerToolbar>
    <content>
      <Carousel height="auto" pages="{
				path: 'customers>/CustomersCollection'
			}" showPageIndicator="false">
        <customLayout>
          <CarouselLayout visiblePagesCount="{settings>/pagesCount}" />
        </customLayout>
        <l:VerticalLayout class="sapUiContentPadding" width="100%">
          <f:Card visible="{=!!${customers>title}}">
            <!-- 
            <f:header>
              <cards:Header title="{customers>Name}" subtitle="{customers>Status}" iconSrc="{customers>ProductPicUrl}" iconDisplayShape="Square" />
            </f:header> 
            -->
            <f:content>
              <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <l:BlockLayout>
                  <l:BlockLayoutRow>
                    <l:BlockLayoutCell>
                      <VBox>
                        <Title text="{customers>title}" />
                        <Image src="{customers>image}" width="auto" height="2rem" class="customers-img-container" />
                      </VBox>
                    </l:BlockLayoutCell>
                  </l:BlockLayoutRow>
                </l:BlockLayout>
              </l:VerticalLayout>
            </f:content>
          </f:Card>
          <f:Card visible="{=!!${customers>secondLine/title}}">
            <f:content>
              <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <l:BlockLayout>
                  <l:BlockLayoutRow>
                    <l:BlockLayoutCell>
                      <VBox>
                        <Title text="{customers>secondLine/title}" />
                        <Image src="{customers>secondLine/image}" width="auto" height="2rem" class="customers-img-container" />
                      </VBox>
                    </l:BlockLayoutCell>
                  </l:BlockLayoutRow>
                </l:BlockLayout>
              </l:VerticalLayout>
            </f:content>
          </f:Card>
        </l:VerticalLayout>
      </Carousel>
    </content>
  </Panel>
</c:FragmentDefinition>